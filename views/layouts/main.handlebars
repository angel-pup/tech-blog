<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>

  <body>
    <header class="has-background-info has-text-black p-2">
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <div class="navbar-item is-size-4"> The Tech Blog</div>

          <a
            role="button"
            class="navbar-burger burger"
            aria-label="menu"
            aria-expanded="false"
            data-target="navbar-burgs"
          >
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbar-burgs" class="navbar-menu">
          <div class="navbar-end">
            <a class="navbar-item">
              Home
            </a>

            <a class="navbar-item">
              Dashboard
            </a>

            <!-- Only display the logout button if the user is logged in -->
            <div class="navbar-item">
              <div class="buttons">
                {{#unless logged_in}}
                <a 
                  class="button is-primary"
                  id="signup"
                ><strong>Sign Up</strong>
                </a>

                <a
                  class="button is-light"
                  id="login"
                >Log In</a>
                {{/unless}}
                {{#if logged_in}}
                  <a
                    class="button is-danger is-light"
                    id="logout"
                  >Log Out</a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main class="container columns mt-5">

      {{{body}}}
    </main>
    <footer>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <!-- Only include the logout script if the user is logged out -->
    {{#unless logged_in}}
      <script src="/js/menu.js"></script>
    {{/unless}}
    <script src="/js/home.js"></script>
  </body>

</html>